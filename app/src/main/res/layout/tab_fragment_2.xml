<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView_tab_1_T"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@color/primary"
        android:text="Low Risk Tumor Location"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <bhouse.radiovolumes.NonScrollListView
        android:id="@+id/listView_invaded_T"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_tab_1_T">
    </bhouse.radiovolumes.NonScrollListView>

    <TextView
        android:id="@+id/textView_tab_1_N"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@color/primary"
        android:text="Low Risk Node Location"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <bhouse.radiovolumes.NonScrollListView
        android:id="@+id/listView_invaded_N"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_tab_1_T">
    </bhouse.radiovolumes.NonScrollListView>

    <TextView
        android:id="@+id/textView_tab_1_Notes"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@color/primary"
        android:text="Additionnal Notes"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <bhouse.radiovolumes.NonScrollListView
        android:id="@+id/listView_additional_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_tab_1_Notes">
    </bhouse.radiovolumes.NonScrollListView>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="To Scan"
        android:layout_gravity="right"
        android:id="@+id/button_to_scan"/>

</LinearLayout>

</ScrollView>

