<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/list_title"/>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingTop="16dp">

<TextView
    android:id="@+id/uniquen1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/checkBoxn1"
    android:layout_alignParentStart="true"
    android:padding="10dp"
    android:singleLine="false" />

<CheckBox
    android:layout_height="wrap_content"
    android:id="@+id/checkBoxn1"
    android:layout_width="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_alignParentRight="true" />

<TextView
    android:id="@+id/uniquen2a"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/uniquen1"
    android:padding="10dp"
    android:layout_toLeftOf="@id/checkBoxn2a"
    android:layout_alignParentStart="true"
    android:singleLine="false" />

<CheckBox
    android:layout_height="wrap_content"
    android:id="@+id/checkBoxn2a"
    android:layout_below="@+id/uniquen1"
    android:layout_width="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_alignParentRight="true" />

<TextView
    android:id="@+id/multiplen2b"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/checkBoxn2b"
    android:layout_below="@+id/uniquen2a"
    android:padding="10dp"
    android:layout_toLeftOf="@id/checkBox"
    android:layout_alignParentStart="true"
    android:singleLine="false" />

<CheckBox
    android:layout_height="wrap_content"
    android:id="@+id/checkBoxn2b"
    android:layout_below="@+id/uniquen2a"
    android:layout_width="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_alignParentRight="true" />

<TextView
    android:id="@+id/n3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/multiplen2b"
    android:layout_toLeftOf="@id/checkBoxn3"
    android:padding="10dp"
    android:layout_alignParentStart="true"
    android:singleLine="false" />

<CheckBox
    android:layout_height="wrap_content"
    android:id="@+id/checkBoxn3"
    android:layout_width="wrap_content"
    android:layout_below="@+id/multiplen2b"
    android:layout_marginEnd="10dp"
    android:layout_alignParentRight="true" />

</RelativeLayout>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">


<Button
    android:id="@+id/dismiss"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_alignParentRight="true"
    android:text="OK" />


</RelativeLayout>

    </LinearLayout>